<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updateprofile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/temp4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update_Profile"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:paddingTop="30dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20.7dp"
            android:padding="10dp">

            <EditText
                android:id="@+id/update_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="fullname"
                android:inputType="text"
                android:paddingLeft="17dp"
                android:paddingTop="30dp"
                android:paddingRight="15dp"
                android:paddingBottom="30dp"
                android:textSize="12sp"
                android:background="@drawable/border"
                android:textColorHint="#808080"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                />




            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="UserName"
                android:paddingLeft="17dp"
                android:paddingRight="15dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:id="@+id/update_username"
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:layout_below="@id/update_fullname"
                android:textColorHint="#808080"
                android:textColor="#000000"/>





            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint=" phone number"
                android:paddingLeft="17dp"
                android:paddingRight="15dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:layout_marginTop="20dp"
                android:id="@+id/update_phone"
                android:textSize="12sp"
                android:inputType="phone"
                android:layout_below="@id/update_username"
                android:textColorHint="#808080"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="password"
                android:paddingLeft="17dp"
                android:paddingRight="15dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:layout_marginTop="20dp"
                android:id="@+id/update_password"
                android:textSize="12sp"
                android:layout_below="@id/update_phone"
                android:textColorHint="#808080"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/update_save"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:text="UPDATE"
                android:layout_below="@id/update_password"
                android:textSize="12sp" />


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>